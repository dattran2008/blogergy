<div class="container">
  <div class="mt-4">
    <h1>Login</h1>
    <%= form_for(:session,  url: login_path) do |f| %>
      <div class="form-group row mt-3">
        <%= f.label :email, class: 'col-1 col-form-label mr-3' %>
        <%= f.text_field :email, class: 'form-control col-10', placeholder: 'Enter your email' %>
      </div>
      <div class="form-group row mt-3">
        <%= f.label :password, class: 'col-1 col-form-label mr-3' %>
        <%= f.password_field :password, class: 'form-control col-10', placeholder: 'Enter your password' %>
      </div>
      <div class="form-check mt-3">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
      </div>
      <%= f.submit 'Login', class: 'btn btn-dark mt-2' %>
    <% end %>
  </div>

  <%= render 'messages/alert', obj: @user %>
</div>
