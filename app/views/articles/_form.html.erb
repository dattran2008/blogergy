 <%= form_for @article, :html => {class: 'jumbotron', role: 'form'} do |f| %>
  <%= render 'messages/error', obj: @article %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', rows: '5'%>
  </div>
  <%= link_to 'Cancel', articles_path, class: 'btn btn-secondary', role: 'button' %>
  <%= f.submit class: 'btn btn-info' %>
<% end %>

<%= render 'messages/alert', obj: @article %>
