<table class="table">
  <thead class="thead-dark">
    <tr class="text-center">
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% obj.each do |article| %>
      <tr>
        <th scope="row" class="text-center"><%= article.id%></th>
        <td class="text-center"><%= article.title %></td>
        <td><%= truncate(article.description, length: 50) %></td>
        <td class="text-center">
          <% if logged_in? && current_user == article.user %>
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-secondary' %>
            <%= link_to 'View', article_path(article), class: 'btn btn-outline-info' %>
            <%= link_to 'Delete', article_path(article), class: 'btn btn-outline-danger', method: :delete, data: {confirm: "Do you want to delete this?"} %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
