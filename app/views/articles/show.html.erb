<div class="container">
  <h1>Article</h1>

  <% if @article.user %>
    <div class="card text-center">
      <div class="card-img-top mt-3">
        <%= gravatar_for @article.user, size: 150 %>
      </div>
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to @article.user.username, user_path(@article.user) %>
        </h5>
        <blockquote class="blockquote mb-0">
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
          <footer class="blockquote-footer">
            Someone famous in 
            <cite title="Source Title">Source Title</cite>
          </footer>
        </blockquote>
        <small class="lead text-muted">
          <%= pluralize(@article.user.article.count, 'article') %>
        </small>
      </div>
      <div class="card-footer text-muted">
        2 days ago
      </div>
    </div>
  <% end %>

  <div class="mt-3">
    <h3>Title: <%= @article.title %></h3>
    <h3>Description: <%= simple_format(@article.description) %></h3>
    <div class="lead">
      Author: 
      <small class="badge badge-info">
        <%= @article.user ? @article.user.username : 'Updating' %>
      </small>
    </div>
    <hr class="my-4">
    <div class="mb-3">
      <span>About: <%= time_ago_in_words(@article.created_at) %> ago |</span>
      <span>Last updated: <%= time_ago_in_words(@article.updated_at) %> ago </span>
    </div>
    <%= link_to 'Back', articles_path, class: 'btn btn-secondary', role: 'button' %>
    <%= render 'messages/alert' %>
  </div>

</div>
