<div class="container">
  <% if logged_in? %>
  <h1 class="text-center mt-3">User List</h1>
  <table class="table">
    <thead class="thead-dark">
      <tr class="text-center">
        <th scope="col">ID</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Name</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id%></th>
          <td class="text-center"><%= user.username %></td>
          <td class="text-center"><%= user.email %></td>
          <td class="text-center"><%= user.name %></td>
          <td class="text-center">
            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-outline-secondary' %>
            <%= link_to 'View', user_path(user), class: 'btn btn-outline-info' %>
            <%= link_to 'Delete', user_path(user), class: 'btn btn-outline-danger', method: :delete, data: {confirm: "Do you want to delete this?"} %>
          </td>
          <h1>
            [t|T][w|W][i|I][t|T][t|T][e|E][r|R].*['|\"][0-9a-zA-Z]{35,44}['|\"]\.com

          </h1>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= render 'messages/alert', obj: @user %>
  <% else %>
  <div class="text-center mt-3">
    <h3>You don't have permission to do this!</h3>
  </div>
  <% end %>
</div>
