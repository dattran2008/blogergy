<%# Header %>
<div class="page-header page-header-small">
  <div class="page-header-image" data-parallax="true" style="background-image: url(<%= image_path 'backgrounds/cat.jpg' %>) ">
  </div>
  <div class="content-center">
    <div class="container">
      <h1 class="card-title font-weight-bold">Welcome to my social home! </h1>
      <h3 class="card-title">Feel joy with it.</h3>
      <div class="text-center">
        <a href="https://www.facebook.com/shjn.chan" target="_blank" class="btn btn-primary rounded mr-2">
          <i class="fab fa-facebook-f fa-2x"></i>
        </a>
        <a href="https://www.instagram.com/ta.tuda/" target="_blank" class="btn btn-dark rounded mr-2">
          <i class="fab fa-instagram fa-2x"></i>
        </a>
        <a href="https://www.youtube.com/channel/UCZc9iq0PraK2zElZPec0XSw" target="_blank" class="btn btn-danger rounded">
          <i class="fab fa-youtube fa-2x"></i>
        </a>
      </div>
    </div>
  </div>
</div>

<%# Contact Form %>
<div class="section-contact-us text-center" style="padding: 70px 0; position: relative; background: #FFFFFF">
  <div class="container">
    <h2 class="title font-weight-bold">Want to keep in touch?</h2>
    <p class="text-muted">Please let me know about you &#128513;</p>
    <div class="row">
      <div class="col-lg-6 text-center col-md-8 ml-auto mr-auto">
        <%# Name %>
        <div class="input-group input-lg mt-3">
          <div class="input-group-prepend">
            <span class="input-group-text" style="background-color: white">
              <i class="fas fa-user-tie fa-2x"></i>
            </span>
          </div>
          <input type="text" class="form-control" style="height: auto; border-left:none" placeholder="Your Name">
        </div>
        <%# Email %>
        <div class="input-group input-lg mt-3">
          <div class="input-group-prepend">
            <span class="input-group-text" style="background-color: white">
              <i class="far fa-envelope fa-2x"></i>
            </span>
          </div>
          <input type="text" class="form-control" style="height: auto; border-left:none" placeholder="Email">
        </div>
        <%# Textarea %>
        <div class="mt-3">
          <textarea class="form-control" style="border:none; border-bottom: 1px solid #E3E3E3;" name="name" rows="4" cols="80" placeholder="Tell me about you...."></textarea>
        </div>
        <%# Button %>
        <div class="mt-4">
          <a href="#pablo" class="btn btn-outline-info btn-lg rounded-pill">Send Message</a>
        </div>
      </div>
    </div>
  </div>
</div>
